<%- include('../layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>"
                   role="alert">
                   <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                   <strong><%= message.message %></strong>
               </div>
               <% } %>
            <div class="mx-auto" style="width: 200px;">
                <div class="btn btn-success">
                <a class="nav-link" href="/officers/add"><i class="fas fa-user-plus me-1"></i>Add Officer</a>
                </div>
            </div>
            <div class="table-responsive-sm">
                <% if (officers != '') { %>
                    <table class="table table-striped">
                        <thead>
                            <tr class="align-middle table-dark">
                                <th class="text-center">ID</th>
                                <th class="text-center">Image</th>
                                <th class="text-center">First Name</th>
                                <th class="text-center">Last Name</th>
                                <th class="text-center">Sex</th>
                                <th class="text-center">Age</th>
                                <th class="text-center">Badge Number</th>
                                <th class="text-center">Rank</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% officers.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td class="text-center"><%= index + 1%></td>
                                    <td class="text-center"><img src="<%= row.image %>" width="50" class="img" /></td>
                                    <td class="text-center"><a href="/officers/<%= row._id %>"><%= row.firstName %></a></td>
                                    <td class="text-center"><%= row.lastName %></td>
                                    <td class="text-center"><%= row.sex %></td>
                                    <td class="text-center"><%=calculateAge(row.dateOfBirth) %></td>
                                    <td class="text-center"><%= row.badgeNumber %></td>
                                    <td class="text-center"><%= row.rank %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Officers found in database</h1>
                    <% } %>

            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>